<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="camera">
  <xacro:macro name="usb_camera" params="prefix:=camera">
    <link name="${prefix}_link">
      <visual>
        <origin xyz=" 0 0 0 " rpy="0 0 0" />
        <geometry>
          <box size="0.03 0.04 0.04" />
        </geometry>
        <material name="gray"/>
      </visual>
    </link>
  </xacro:macro>

</robot>
